<mvc:View
	controllerName="sap.ui.demo.odata.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">

	<Page
		id="page"
		title="{i18n>worklistViewTitle}"
		showNavButton="false"
		class="sapUiContentPadding">
		
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="{i18n>worklistViewTitle}" level="H4" />
				</contentMiddle>
				<contentRight>
					<Button
						id="addButton"
						icon="sap-icon://add"
						type="Emphasized"
						tooltip="{i18n>createButtonTooltip}"
						press=".onAdd"/>
					<Button
						id="logoutButton"
						icon="sap-icon://log"
						type="Transparent"
						tooltip="{i18n>logoutButtonTooltip}"
						press=".onLogout"/>
				</contentRight>
			</Bar>
		</customHeader>
		
		<content>
			<Table
				id="table"
				width="auto"
				items="{
					path: '/SummarySet',
					sorter: {
						path: 'Tarih',
						descending: true
					}
				}"
				noDataText="{i18n>worklistNoDataText}"
				growing="true"
				growingScrollToLoad="true"
				growingThreshold="20"
				updateFinished=".onUpdateFinished"
				mode="None"
				class="sapUiSmallMarginTop">

				<headerToolbar>
					<OverflowToolbar>
						<Title id="tableHeader" text="{i18n>worklistTableTitle}" level="H3"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							width="300px"
							placeholder="Ara..."
							search=".onSearch"
							showRefreshButton="true" />
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column id="nameColumn" width="20%">
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column id="projectColumn" width="25%">
						<Text text="{i18n>tableProjectColumnTitle}" id="projectColumnTitle"/>
					</Column>
					<Column id="customerColumn" width="15%">
						<Text text="Müşteri" id="customerColumnTitle"/>
					</Column>
                    <Column id="dateColumn" width="15%">
						<Text text="{i18n>tableDateColumnTitle}" id="dateColumnTitle"/>
					</Column>
					<Column id="locationColumn" width="10%">
						<Text text="Lokasyon" id="locationColumnTitle"/>
					</Column>
					<Column id="durationColumn" hAlign="End" width="10%">
						<Text text="{i18n>tableDurationColumnTitle}" id="durationColumnTitle"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press=".onPress">
						<cells>
							<ObjectIdentifier
								title="{PersonelAdi}"
								text="{Personel}"/>
							<VBox>
								<Text text="{ProjeTxt}" class="sapUiTinyMarginBottom" />
								<ObjectStatus 
									text="{Proje}" 
									state="Information" />
							</VBox>
							<Text text="{Customer}" />
                            <Text text="{
                                path: 'Tarih',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    style: 'medium'
                                }
                            }" />
							<ObjectStatus 
								text="{LokasyonTxt}"
								state="{= ${LokasyonType} === 'O' ? 'Success' : (${LokasyonType} === 'U' ? 'Warning' : 'Information') }" />
							<ObjectNumber
								number="{Sure}"
								unit="Saat"
								state="Success" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Text text="© 2026 SAP OData Client" class="sapUiTinyText" />
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
