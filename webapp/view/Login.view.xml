<mvc:View
	controllerName="sap.ui.demo.odata.controller.Login"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<Page
		id="loginPage"
		showHeader="false"
		backgroundDesign="Solid"
		class="sapUiContentPadding">
		
		<content>
			<FlexBox
				height="100%"
				alignItems="Center"
				justifyContent="Center"
				class="loginPageContainer">
				
				<VBox class="loginCard sapUiMediumMargin">
					
					<!-- Logo Section -->
					<HBox justifyContent="Center" class="sapUiMediumMarginBottom">
						<core:Icon 
							src="sap-icon://business-objects-experience"
							size="3rem"
							color="#0a6ed1" />
					</HBox>
					
					<Title 
						text="SAP OData Client"
						level="H2"
						textAlign="Center"
						class="sapUiSmallMarginBottom" />
					
					<Text 
						text="{i18n>loginFormTitle}"
						textAlign="Center"
						class="sapUiMediumMarginBottom sapUiTinyMarginTop" />
					
					<!-- Login Form -->
					<VBox class="sapUiSmallMarginTop">
						
						<Label text="{i18n>labelUsername}" required="true" class="sapUiTinyMarginBottom" />
						<Input
							id="usernameInput"
							placeholder="{i18n>usernamePlaceholder}"
							value="{/username}"
							submit=".onLogin"
							class="sapUiSmallMarginBottom"
							width="100%" />
						
						<Label text="{i18n>labelPassword}" required="true" class="sapUiTinyMarginBottom" />
						<Input
							id="passwordInput"
							type="Password"
							placeholder="{i18n>passwordPlaceholder}"
							value="{/password}"
							submit=".onLogin"
							class="sapUiSmallMarginBottom"
							width="100%" />
						
						<Label text="{i18n>labelSapServerUrl}" class="sapUiTinyMarginBottom" />
						<Input
							id="sapServerUrlInput"
							placeholder="https://hostname:port/sap/opu/odata/sap/SERVICE_NAME"
							value="{/sapServerUrl}"
							class="sapUiMediumMarginBottom"
							width="100%" />
						
						<Button
							id="loginButton"
							text="{i18n>loginButtonText}"
							type="Emphasized"
							width="100%"
							press=".onLogin"
							icon="sap-icon://log"
							class="sapUiSmallMarginTop sapUiSmallMarginBottom" />
						
						<MessageStrip
							id="errorStrip"
							text="{/errorMessage}"
							type="Error"
							showIcon="true"
							visible="{= ${/errorMessage} !== '' }"
							class="sapUiSmallMarginTop" />
							
					</VBox>
					
					<!-- Footer -->
					<HBox justifyContent="Center" class="sapUiMediumMarginTop">
						<Text text="Powered by OpenUI5" class="sapUiTinyText" />
					</HBox>
					
				</VBox>
			</FlexBox>
		</content>
	</Page>
</mvc:View>
