<mvc:View
	controllerName="sap.ui.demo.odata.controller.Login"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">

	<Page
		id="loginPage"
		showHeader="false"
		backgroundDesign="Solid"
		enableScrolling="false">
		
		<content>
			<FlexBox
				height="100vh"
				alignItems="Center"
				justifyContent="Center"
				direction="Column">
				
				<VBox class="loginCard">
					
					<!-- Logo Section -->
					<HBox justifyContent="Center" class="sapUiMediumMarginBottom">
						<core:Icon 
							src="sap-icon://business-objects-experience"
							size="4rem"
							color="#0a6ed1" />
					</HBox>
					
					<Title 
						text="SAP OData Client"
						level="H3"
						textAlign="Center"
						class="sapUiTinyMarginBottom" />
					
					<Text 
						text="{i18n>loginFormTitle}"
						textAlign="Center"
						class="sapUiLargeMarginBottom" />
					
					<!-- Login Form -->
					<VBox>
						
						<Label text="{i18n>labelUsername}" required="true" class="sapUiTinyMarginBottom" />
						<Input
							id="usernameInput"
							placeholder="{i18n>usernamePlaceholder}"
							value="{/username}"
							submit=".onLogin"
							class="sapUiSmallMarginBottom"
							width="100%" />
						
						<Label text="{i18n>labelPassword}" required="true" class="sapUiTinyMarginBottom" />
						<Input
							id="passwordInput"
							type="Password"
							placeholder="{i18n>passwordPlaceholder}"
							value="{/password}"
							submit=".onLogin"
							class="sapUiSmallMarginBottom"
							width="100%" />
						
						<Label text="{i18n>labelSapServerUrl}" class="sapUiTinyMarginBottom" />
						<Input
							id="sapServerUrlInput"
							placeholder="https://server:port/sap/opu/odata/sap/SERVICE"
							value="{/sapServerUrl}"
							class="sapUiMediumMarginBottom"
							width="100%" />

						<Label text="{i18n>labelLanguage}" class="sapUiTinyMarginBottom" />
						<Select
							id="languageSelect"
							selectedKey="{/language}"
							class="sapUiMediumMarginBottom"
							width="100%"
							change=".onChangeLanguage">
							<core:Item key="TR" text="Türkçe" />
							<core:Item key="EN" text="English" />
							<core:Item key="DE" text="Deutsch" />
						</Select>
						
						<Button
							id="loginButton"
							text="{i18n>loginButtonText}"
							type="Emphasized"
							width="100%"
							press=".onLogin"
							icon="sap-icon://log"
							class="sapUiMediumMarginTop" />
						
						<MessageStrip
							id="errorStrip"
							text="{/errorMessage}"
							type="Error"
							showIcon="true"
							visible="{= ${/errorMessage} !== '' }"
							class="sapUiSmallMarginTop" />
							
					</VBox>
					
					<!-- Footer -->
					<HBox justifyContent="Center" class="sapUiLargeMarginTop">
						<Text text="Powered by OpenUI5" class="sapUiTinyText" />
					</HBox>
					
				</VBox>
			</FlexBox>
		</content>
	</Page>
</mvc:View>
